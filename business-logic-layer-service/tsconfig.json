{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "allowImportingTsExtensions": true,
    "noEmit": true,


    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}